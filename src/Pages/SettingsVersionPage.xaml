<Page x:Class="Flarial.Launcher.Pages.SettingsVersionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="SettingsVersionPage"
      Height="470"
      Width="555">
    <Page.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2D2526"/>
            <Setter Property="BorderBrush" Value="#3A2F30"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/#Space Grotesk"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#3A2F30"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#4A3A3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Left">
            <Label Margin="0,0,0,5"
                   HorizontalAlignment="Left"
                   FontFamily="pack://application:,,,/Assets/#Space Grotesk"
                   Content="DLL Order"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"/>
            <Border Margin="5,0,0,5" VerticalAlignment="Bottom" Background="#FF2438" Height="3"/>
        </Grid>

        <Grid Grid.Row="1" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="DllListBox"
                     Grid.Column="0"
                     Background="#151515"
                     Foreground="White"
                     BorderThickness="1"
                     BorderBrush="#32292A"
                     FontFamily="pack://application:,,,/Assets/#Space Grotesk"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Margin" Value="2"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#4A2E31"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2C2324"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <StackPanel Grid.Column="2" VerticalAlignment="Top">
                <Button Style="{StaticResource ActionButtonStyle}" Click="Add_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Path Width="14" Height="14" Stroke="White" StrokeThickness="2" Data="M7 1V13 M1 7H13" Margin="0,0,6,0"/>
                        <TextBlock Text="Add" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}" Click="Remove_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Path Width="14" Height="14" Stroke="White" StrokeThickness="1.8" Data="M2 3H12 M4 3V1H10V3 M3 3L4 13H10L11 3 M5.5 5.5V11 M8.5 5.5V11" Margin="0,0,6,0"/>
                        <TextBlock Text="Remove" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}" Click="Up_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Path Width="14" Height="14" Stroke="White" StrokeThickness="2" Data="M7 2L2 7 M7 2L12 7 M7 2V13" Margin="0,0,6,0"/>
                        <TextBlock Text="Up" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource ActionButtonStyle}" Margin="0" Click="Down_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Path Width="14" Height="14" Stroke="White" StrokeThickness="2" Data="M7 12L2 7 M7 12L12 7 M7 1V12" Margin="0,0,6,0"/>
                        <TextBlock Text="Down" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="2"
                   Foreground="#B0B0B0"
                   FontFamily="pack://application:,,,/Assets/#Space Grotesk"
                   Text="Injection order follows this list from top to bottom."/>
    </Grid>
</Page>
